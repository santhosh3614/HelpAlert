<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="#aaff00" />

            <stroke android:dashGap="2dp" android:dashWidth="3dp" android:width="5dp" android:color="#ff0000" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:centerColor="#d4d4d4" android:centerX="0.5" android:centerY="0.5" android:endColor="#8dc73f" android:startColor="#d4d4d4" />

            <stroke android:width="1dp" />

            <corners android:radius="6dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:centerColor="#a4ded4" android:endColor="#c4d4d4" android:startColor="#d4d4d4" />

            <stroke android:width="1dp" />

            <corners android:radius="10dp" />
        </shape></item>

</selector>